<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CrearAplicacionActivity" tools:layout_editor_absoluteY="81dp">
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/txt_id_ingredienteCrear"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView14" app:layout_constraintEnd_toStartOf="@+id/btn_foto"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="32dp" android:layout_marginEnd="55dp"/>
    <TextView
        android:text="Id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView14"
        tools:ignore="MissingConstraints"
        app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="@+id/txt_id_ingredienteCrear"
        android:layout_marginTop="15dp"/>

    <EditText
        android:id="@+id/txt_tipoIngrediente"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="32dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView13"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tipoIngrediente"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="32dp"
        tools:layout_editor_absoluteY="401dp" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:text="@string/opcional"
        app:layout_constraintStart_toStartOf="@+id/txt_descripcionPreparacionCrear"
        app:layout_constraintTop_toBottomOf="@+id/txt_descripcionPreparacionCrear"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:text="@string/necesitaRefrigeracion"
        app:layout_constraintTop_toBottomOf="@+id/txt_descripcionPreparacionCrear"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="233dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:text="@string/nombreIngrediente"
        app:layout_constraintStart_toStartOf="@+id/txt_id_ingredienteCrear"
        app:layout_constraintTop_toBottomOf="@+id/txt_id_ingredienteCrear"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:layout_marginTop="54dp"
        android:layout_marginBottom="54dp"
        android:text="@string/cantidad"
        app:layout_constraintBottom_toBottomOf="@+id/txt_cantidadCrear"
        app:layout_constraintStart_toStartOf="@+id/txt_nombres_ingredienteCrear"
        app:layout_constraintTop_toTopOf="@+id/txt_nombres_ingredienteCrear"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:layout_marginTop="54dp"
        android:layout_marginBottom="54dp"
        android:text="@string/descripcionPreparacion"
        app:layout_constraintBottom_toBottomOf="@+id/txt_descripcionPreparacionCrear"
        app:layout_constraintStart_toStartOf="@+id/txt_cantidadCrear"
        app:layout_constraintTop_toTopOf="@+id/txt_cantidadCrear"
        tools:ignore="MissingConstraints" />
    <EditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/txt_nombres_ingredienteCrear"
        tools:ignore="MissingConstraints"
        android:layout_marginTop="9dp"
        app:layout_constraintTop_toBottomOf="@+id/textView3" app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="32dp" android:layout_marginEnd="32dp"/>
    <EditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/txt_cantidadCrear"
        tools:ignore="MissingConstraints"
        android:layout_marginTop="36dp"
        app:layout_constraintTop_toBottomOf="@+id/txt_nombres_ingredienteCrear" app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="32dp" android:layout_marginEnd="32dp"/>

    <EditText
        android:id="@+id/txt_descripcionPreparacionCrear"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="32dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_cantidadCrear"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btn_guardar_ap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:text="@string/guardar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_tipoIngrediente"
        app:layout_constraintVertical_bias="0.496"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btn_cancelar_ap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:text="@string/cancelar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_guardar_ap"
        app:layout_constraintTop_toBottomOf="@+id/txt_tipoIngrediente"
        tools:ignore="MissingConstraints" />

    <Button
        android:text="Tomar Foto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_foto" android:layout_marginTop="39dp"
        app:layout_constraintStart_toEndOf="@+id/txt_id_ingredienteCrear" app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="32dp"
        />

    <Spinner
        android:id="@+id/spinner_opcional"
        android:layout_width="122dp"
        android:layout_height="27dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/textView13"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView11" />

    <Spinner
        android:id="@+id/spinner2_Refrigeracion"
        android:layout_width="140dp"
        android:layout_height="29dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/txt_tipoIngrediente"
        app:layout_constraintStart_toEndOf="@+id/spinner_opcional"
        app:layout_constraintTop_toBottomOf="@+id/textView12"
        app:layout_constraintVertical_bias="0.156" />
</android.support.constraint.ConstraintLayout>