<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".CrearIngredientesActivity" tools:layout_editor_absoluteY="81dp"
        android:background="@color/colorPrimaryDark">
    <TextView
            android:layout_width="121dp"
            android:layout_height="24dp"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/txt_id_ingredienteCrear"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toTopOf="parent" android:fontFamily="casual"
            android:textColor="@color/alert_default_icon_color" android:layout_marginEnd="100dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="5dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.967"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/txt_nombres_ingredienteCrear"
            app:layout_constraintVertical_bias="0.0"/>
    <TextView
            android:text="@string/id"
            android:layout_width="46dp"
            android:layout_height="24dp"
            android:id="@+id/textView14"
            tools:ignore="MissingConstraints"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toStartOf="@+id/txt_id_ingredienteCrear"
            android:layout_marginEnd="8dp" android:layout_marginTop="24dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="1.0" android:fontFamily="casual" android:textAlignment="center"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/txt_nombres_ingredienteCrear"
            app:layout_constraintVertical_bias="0.0" android:textSize="18sp"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"/>

    <EditText
            android:id="@+id/txt_tipoIngrediente"
            android:layout_width="254dp"
            android:layout_height="39dp"
            android:ems="10"
            android:inputType="textPersonName"
            tools:ignore="MissingConstraints"
            android:fontFamily="casual"
            android:textColor="@color/alert_default_text_color" android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/spinner2_Refrigeracion"/>

    <TextView
            android:id="@+id/textView13"
            android:layout_width="84dp"
            android:layout_height="41dp"
            android:text="@string/tipoIngrediente"
            tools:ignore="MissingConstraints"
            android:fontFamily="casual" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/txt_tipoIngrediente" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/spinner_opcional" app:layout_constraintHorizontal_bias="0.295"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"/>

    <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/opcional"
            tools:ignore="MissingConstraints"
            android:fontFamily="casual" android:layout_marginStart="48dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="12dp" app:layout_constraintTop_toBottomOf="@+id/textView10"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"/>

    <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/necesitaRefrigeracion"
            tools:ignore="MissingConstraints"
            android:fontFamily="casual"
            app:layout_constraintTop_toBottomOf="@+id/txt_descripcionPreparacionCrear" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toEndOf="@+id/textView11"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.862"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"/>

    <TextView
            android:id="@+id/textView3"
            android:layout_width="83dp"
            android:layout_height="39dp"
            android:text="@string/nombreIngrediente"
            tools:ignore="MissingConstraints"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="4dp"
            android:layout_marginTop="24dp" app:layout_constraintTop_toBottomOf="@+id/txt_id_ingredienteCrear"
            android:fontFamily="casual" android:textColor="@color/common_google_signin_btn_text_dark_focused"/>

    <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:text="@string/cantidad"
            tools:ignore="MissingConstraints"
            app:layout_constraintEnd_toStartOf="@+id/txt_cantidadCrear" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/textView3"
            app:layout_constraintHorizontal_bias="0.759" android:fontFamily="casual"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"/>

    <TextView
            android:id="@+id/textView10"
            android:layout_width="82dp"
            android:layout_height="39dp"
            android:text="@string/descripcionPreparacion"
            tools:ignore="MissingConstraints"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="4dp"
            android:layout_marginTop="24dp" app:layout_constraintTop_toBottomOf="@+id/textView9"
            android:fontFamily="casual" android:textColor="@color/common_google_signin_btn_text_dark_focused"/>
    <EditText
            android:layout_width="262dp"
            android:layout_height="39dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txt_nombres_ingredienteCrear"
            tools:ignore="MissingConstraints"
            app:layout_constraintStart_toEndOf="@+id/textView3"
            android:layout_marginStart="8dp" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/btn_foto"
            app:layout_constraintHorizontal_bias="0.473" android:fontFamily="casual"
            android:textColor="@color/alert_default_icon_color"/>
    <EditText
            android:layout_width="148dp"
            android:layout_height="37dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/txt_cantidadCrear"
            tools:ignore="MissingConstraints"
            android:layout_marginEnd="60dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/txt_nombres_ingredienteCrear"/>

    <EditText
            android:id="@+id/txt_descripcionPreparacionCrear"
            android:layout_width="260dp"
            android:layout_height="37dp"
            android:ems="10"
            android:inputType="textPersonName"
            tools:ignore="MissingConstraints"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/txt_cantidadCrear"
            app:layout_constraintStart_toEndOf="@+id/textView10" android:layout_marginStart="8dp"
            android:fontFamily="casual" android:textColor="@color/alert_default_text_color"
            app:layout_constraintHorizontal_bias="0.714"/>

    <Button
            android:id="@+id/btn_guardar_ingredientes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/guardar"
            tools:ignore="MissingConstraints"
            style="@android:style/Widget.Button.Inset"
            android:fontFamily="casual" android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="22dp" app:layout_constraintEnd_toStartOf="@+id/btn_cancelar_ingredientes"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/txt_tipoIngrediente"/>

    <Button
            android:id="@+id/btn_cancelar_ingredientes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cancelar"
            tools:ignore="MissingConstraints"
            style="@android:style/Widget.Button.Inset"
            android:fontFamily="casual" android:layout_marginEnd="60dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/textView13"
            app:layout_constraintVertical_bias="0.504"/>

    <Button
            android:text="@string/tomarFoto"
            android:layout_width="97dp"
            android:layout_height="wrap_content"
            android:id="@+id/btn_foto"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toEndOf="@+id/txt_id_ingredienteCrear"
            android:layout_marginStart="8dp" style="@android:style/Widget.Button.Inset"
            app:layout_constraintHorizontal_bias="1.0"/>

    <Spinner
            android:id="@+id/spinner_opcional"
            android:layout_width="80dp"
            android:layout_height="22dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView11"
            app:layout_constraintEnd_toStartOf="@+id/spinner2_Refrigeracion" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.202" android:layout_marginTop="8dp" />

    <Spinner
            android:id="@+id/spinner2_Refrigeracion"
            android:layout_width="87dp"
            android:layout_height="26dp"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@+id/textView12" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="44dp"/>
</android.support.constraint.ConstraintLayout>